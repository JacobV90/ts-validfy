{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es2016"
    ],
    "noImplicitAny": true,
    "outDir": "./dist",
    "declaration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": [
    "./test/**/*.ts"
  ]
}
