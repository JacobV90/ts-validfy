{
  "name": "valid-io",
  "version": "1.0.0",
  "description": "A module that provides run time type checking for typescript applications",
  "main": "index.js",
  "bin": {
    "create-schemas": "./dist/type-parser-cli.js"
  },
  "repository": "git@github.com:JacobV90/valid-io.git",
  "author": "Jacob Veal <jacobveal90@gmail.com>",
  "license": "MIT",
  "scripts": {
    "parse": "ts-node ./src/lib/generator.cli.ts",
    "build": "tsc",
    "lint": "tslint -p ./tsconfig.json",
    "lint-fix": "tslint --fix -p ./tsconfig.json ",
    "test": "nyc mocha --opts ./mocha.opts test/*.spec.ts",
    "test-perf": "nyc mocha --opts ./mocha.opts test/performance.ts",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "dependencies": {
    "ajv": "^6.5.3",
    "chalk": "^2.4.1",
    "fs": "^0.0.1-security",
    "glob-fs": "^0.1.7",
    "path": "^0.12.7",
    "typescript": "^3.0.3",
    "typescript-json-schema": "^0.32.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/joi": "^13.4.5",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.9.4",
    "@types/underscore": "^1.8.9",
    "chai": "^4.1.2",
    "class-validator": "^0.9.1",
    "joi": "^13.6.0",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "underscore": "^1.9.1"
  },
  "validation": {
    "include": "./test/*.ts",
    "outDir": "./test/"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/lib/config.ts",
      "src/lib/type-parse.ts",
      "src/lib/generator.cli.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
